{
    "editor.minimap.autohide": true,
    "editor.fontSize": 12,
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.rulers": [],
    "editor.wordWrap": "off",
    "search.useIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "explorer.excludeGitIgnore": true,
    // Seguir los archivos abiertos en el explorador
    "explorer.autoReveal": true,
    "files.eol": "\n",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "keyboard.mapAltGrToCtrlAlt": true,
    //appareance
    "editor.lineHeight": 1.7,
    "editor.dragAndDrop": false,
    "explorer.compactFolders": false,
    "workbench.editor.showTabs": "single",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "workbench.tree.indent": 10,
    "workbench.list.horizontalScrolling": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
        "source.addMissingImports": "always",
        "source.organizeImports": "always",
        "source.fixAll": "always"
    },
    "[csharp]": {
        "editor.maxTokenizationLineLength": 2500,
        "editor.inlineSuggest.suppressSuggestions": false
    },
    "[typescript]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": [
            "source.addMissingImports",
            "source.fixAll.eslint"
        ]
    },
    //extensions
    "focus.opacity": "0.7",
    "focus.highlightRange": "block",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "always",
    "git.autofetch": true,
    "nugetpackagemanagergui.packageSources": [
        {
            "sourceName": "Nuget",
            "sourceType": "server",
            "preRelease": true,
            "searchUrl": "https://azuresearch-usnc.nuget.org/query",
            "packageVersionsUrl": "https://api.nuget.org/v3-flatcontainer/{{packageName}}/index.json",
            "packageUrl": "https://www.nuget.org/packages/{{packageName}}/{{version}}",
            "authorization": {
                "authType": "none"
            }
        }
    ],
    "workbench.iconTheme": "vscode-icons",
    "csharp.experimental.debug.hotReload": true,
    "csharp.debug.hotReloadOnSave": true,
    "csharp.debug.justMyCode": true,
    "csharp.debug.symbolOptions.searchNuGetOrgSymbolServer": false,
    "csharp.format.enable": true,
    "dotnet.autoDetect": "on",
    "dotnet.inlayHints.suppressInlayHintsForParametersThatDifferOnlyBySuffix": true,
    "omnisharp.enableDecompilationSupport": true,
    "azureFunctions.projectLanguage": "C#",
    "powershell.promptToUpdatePowerShell": false,
    "editor.accessibilitySupport": "off",
    "editor.renderWhitespace": "none",
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.activityBar.location": "top",
    "git-graph.repository.fetchAndPrune": true,
    "git-graph.repository.fetchAndPruneTags": true,
    "settingsSync.ignoredExtensions": [],
    "settingsSync.ignoredSettings": [],
    "security.workspace.trust.untrustedFiles": "open",
    "editor.stickyScroll.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.linkedEditing": true,
    "dotnet.inlayHints.enableInlayHintsForParameters": true,
    "dotnet.inlayHints.enableInlayHintsForIndexerParameters": true,
    "dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
    "dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,
    "dotnet.inlayHints.suppressInlayHintsForParametersThatMatchArgumentName": false,
    "dotnet.inlayHints.suppressInlayHintsForParametersThatMatchMethodIntent": false,
    "csharp.inlayHints.enableInlayHintsForImplicitObjectCreation": false,
    "csharp.inlayHints.enableInlayHintsForImplicitVariableTypes": true,
    "csharp.inlayHints.enableInlayHintsForLambdaParameterTypes": true,
    "csharp.inlayHints.enableInlayHintsForTypes": true,
    "azureResourceGroups.selectedSubscriptions": [],
    "files.associations": {
        "*.ruleset": "xml"
    },
    "xml.codeLens.enabled": true,
    "xml.format.maxLineWidth": 200,
}
